{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container d-flex align-items-center justify-content-center" style="min-height: 100vh;">
    <div class="col-11 col-sm-8 col-md-6 col-lg-5 col-xl-4">
        <div class="card shadow-lg border-0 p-4 my-5">
            <div class="text-center mb-4">
                <img src="{{ asset('images/logo.png') }}" alt="Logo" class="mb-3" style="width: 100px; height: auto;">
                <h2 class="fw-bold text-dark">Identification</h2>
                <p class="text-muted small text-uppercase">Accès Sécurisé</p>
                <hr class="mx-auto w-25">
            </div>

            <form method="post">
                {% if error %}
                    <div class="alert alert-danger border-0 small mb-3">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                <div class="mb-3">
                    <label for="identifiant" class="form-label small fw-bold text-secondary">IDENTIFIANT</label>
                    <input type="text" name="identifiant" id="identifiant" value="{{ last_username }}" class="form-control bg-light py-2" placeholder="Votre matricule" required autofocus>
                </div>

                <div class="mb-4">
                    <label for="password" class="form-label small fw-bold text-secondary">MOT DE PASSE</label>
                    <input type="password" name="password" id="password" class="form-control bg-light py-2" placeholder="••••••••" required>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('login_item') }}">

                <div class="row g-2">
                    <div class="col-6">
                        <button type="button" class="btn btn-outline-secondary w-100 py-2" onclick="this.form.reset(); Array.from(this.form.elements).forEach(el => el.value = '')">Reset</button>
                    </div>
                    <div class="col-6">
                        <button type="submit" class="btn btn-primary w-100 py-2 shadow-sm">Valider</button>
                    </div>
                </div>
                
                <div class="mt-4 text-center">
                    <p class="small text-secondary">Pas de compte ? 
                        <a href="{{ path('app_register') }}" class="text-decoration-none fw-bold text-primary">Ajout compte</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}